
{
  "name": "nebula-system-monitor",
  "version": "1.0.0",
  "description": "Axon~Tesla Tech System Monitor",
  "main": "electron/main.js",
  "author": "Axon Tesla",
  "scripts": {
    "dev": "vite --port 3000",
    "build": "vite build",
    "electron": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "systeminformation": "^5.22.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.0",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.axontesla.nebula",
    "productName": "Axon Nebula Monitor",
    "directories": {
      "output": "dist_app"
    },
    "files": [
      "build/**/*",
      "electron/**/*"
    ],
    "linux": {
      "target": "AppImage",
      "category": "System",
      "icon": "public/icon.png"
    }
  }
}
